@model TechLead.Models.Exercise

@{
    ViewBag.Title = "Create";
}
<div class="Content">

    <div class="CreateProblem">
        <h2>Create an exercise</h2>
        <br />
        <hr />
        <span>FrontEnd</span>
        <br />
        <p>Write down the information that will be displayed to the user</p>
        <br /><br />

        <form>
            <div class="form-group">
                @Html.LabelFor(ex => ex.Name, "Title")
                @Html.TextBoxFor(ex => ex.Name, new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(ex => ex.Difficulty, "Difficulty\n")
                @Html.DropDownListFor(ex => ex.Difficulty, new SelectList(Model.Difficulty, "Id", "Name"), new { @class = "form-control", id = "exampleFormControlTextarea1" })
            </div>
            <br />
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Condition</label>
                <textarea id="notes" name="notes" rows="6" value="" style="width:100%; max-width: none;" class="form-control"></textarea>
                @Model.Condition
            </div>

            <br />
            <p>
                *By default there are 5 test cases to display to the user. If you have less than 5 test-cases to display, let the rest blank.
            </p>
            <br />

            <div class="row">
                Test case 1:
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Imput</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Imput1
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Output</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Output1
                    </div>
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                Test case 2:
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Imput</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Imput2
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Output</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Output2
                    </div>
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                Test case 3:
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Imput</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Imput3
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Output</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Output3
                    </div>
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                Test case 4:
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Imput</label>
                        <textarea id="notes" name="notes" rows="6" class="form-control" style="width:100%; max-width: none;"></textarea>
                        @Model.Imput4
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Output</label>
