@model TechLead.Models.Exercise

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Content">

    <div class="Box">
        <div class="TitleBar">
            <div class="row">

                <div class="col-md-8"> <h3><b>@Html.DisplayFor(ex => ex.Name)</b></h3></div>

                <div class="col-md-4">
                    <div class="PointsAndDifficultyBox">
                        @switch (Model.DifficulyId)
                        {
                            case 4:<p>Beginner</p>break;
                            case 5:<p>Intermediate</p>break;
                            case 6:<p>Advanced</p>break;
                        }

                        @Html.DisplayFor(ex => ex.Points)
                    </div>
                </div>
            </div>
        </div>
        <br /><br /><br />

        <h3>Condition</h3>
        <br />
        <pre> @Html.DisplayFor(ex => ex.Condition)</pre>
        <br /><br /><br />

        <div class="row">
            <h3>Test case 1:</h3>
            <br />
            <div class="col-md-6">
                <div class="IOContainer">
                    <pre>@Html.DisplayFor(ex => ex.Imput1) </pre> 
                </div>
            </div>

            <div class="col-md-6">
                <div class="IOContainer">
                    <pre> @Html.DisplayFor(ex => ex.Output1)</pre>
                </div>
            </div>
        </div>

        <br /> <br />

        @if (Model.Imput2 != null)
        {
               <div class="row">
                   <h3>Test case 2:</h3>
                   <div class="col-md-6">
                       <div class="IOContainer">
                           <pre>@Html.DisplayFor(ex => ex.Imput2) </pre>
                       </div>
                   </div>

                   <div class="col-md-6">
                       <div class="IOContainer">
                           <pre> @Html.DisplayFor(ex => ex.Output2)</pre>
                       </div>
                   </div>
               </div>

            <br /> <br />
        }

        @if (Model.Imput3 != null)
        {
            <div class="row">
                <h3>Test case 3:</h3>
               <div class="col-md-6">
                <div class="IOContainer">
                    <pre>@Html.DisplayFor(ex => ex.Imput3) </pre>
                </div>
            </div>

            <div class="col-md-6">
                <div class="IOContainer">
                    <pre>  @Html.DisplayFor(ex => ex.Output3)</pre> 
                </div>
            </div>
            </div>

            <br /> <br />
        }

        @if (Model.Imput4 != null)
        {
            <div class="row">
                <h3>Test case 4:</h3>
                <div class="col-md-6">
                       <div class="IOContainer">
                           <pre> @Html.DisplayFor(ex => ex.Imput4)</pre>
                       </div>
                   </div>

                   <div class="col-md-6">
                       <div class="IOContainer">
                           <pre> @Html.DisplayFor(ex => ex.Output4)</pre> 
                       </div>
                   </div>
            </div>

            <br /> <br />
        }

        @if (Model.Imput5 != null)
        {
            <div class="row">
                <h3>Test case 5:</h3>
                <div class="col-md-6">
                       <div class="IOContainer">
                           <pre>@Html.DisplayFor(ex => ex.Imput5) </pre>
                       </div>
                   </div>

                   <div class="col-md-6">
                       <div class="IOContainer">
                           <pre>@Html.DisplayFor(ex => ex.Output5) </pre> 
                       </div>
                   </div>
            </div>

            <br /> <br />
        }

        <hr />

        <h2>Basic File Upload</h2>
        @using (Html.BeginForm("Index",
                                "Home",
                                FormMethod.Post,
                                new { enctype = "multipart/form-data" }))
        {
            <label for="file">Upload Image:</label>
            <input type="file" name="file" id="file" /><br><br>
            <input type="submit" value="Upload Image" />
            <br><br>
            @ViewBag.Message
        }

    </div>
</div>


