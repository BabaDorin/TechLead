@model TechLead.Models.ImportExerciseViewModel
@{
    ViewBag.Title = "ImportExercise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Content">
    <div class="TitleBox">
        <h2>Import an existing problem</h2>
    </div>
    <div class="Box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ExerciseId, "Problem ID: ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ExerciseId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ExerciseId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Import" class="btn btn-primary" />
                    </div>
                </div>

                <br />
                <br />
                <div class="form-group">
                    @Html.Label("How to find the ID: ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <img src="~/ImageResources/import.jpg" style="height:400px;" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

