@model TechLead.Models.ClassViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Content">
    <div class="TitleBox">
        <h2>@Model.ClassName</h2>
        <h3>@Model.ClassInfo</h3>
        <p class="InvitationCode">Invitation code: @Model.ClassInvittionCode</p>
    </div>
    <div class="Box">
        <button type="button" class="btn-primary">Import an existing exercise</button>
        <button type="button" class="btn-primary">Create an exercise</button>
    </div>
    <div class="Box">
        <!--Display the problems here-->
        @for (int i = 0; i < Model.Exercises.Count; i++)
        {
            <a href="@Url.Action("Details", "Problem", new { id = Model.Exercises[i].Id }, null)" class="elements">
                <div class="ProblemToDisplay">
                    @Model.Exercises[i].Name
                    <span class="PointsToDisplay">@Model.Exercises[i].Points</span>
                </div>
            </a>
        }
    </div>
</div>
<h2>Details</h2>

